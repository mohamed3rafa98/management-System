@model EmployeeViewModel

@{     ViewData["Title"] = "Edit";  }


<div class="container">
    <br />
    <h1>Edit Employee</h1>

    <hr />
    <div class="row">
        <div class="col-md-4">
            <form  asp-controller="Employee" asp-action="Edit" method="post" enctype="multipart/form-data">
                <partial name="PartialView/Create_Edit_PartialView" />
                <div class="mt-5">
                    <input type="hidden" asp-for="ImageName" />
                    <input type="submit" value="Save" class="btn btn-primary mr-3" />
                    <a asp-controller="Employee" asp-action="Index" class="btn btn-light mr-3">Back to List</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section ValidationSection {
    <partial name="_ValidationScriptsPartial" />
}